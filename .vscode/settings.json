{
    "editor.lineHeight": 1.2,
    "files.exclude": {
        "**/{Scripts,Resources}/**": true,
        "**/Documents/AutoHotkey/**": true
    },
    "scm.alwaysShowActions": true,
    "scm.defaultViewMode": "tree",
    "scm.inputFontFamily": "editor",
    "scm.providerCountBadge": "visible",
    "terminal.integrated.tabs.defaultColor": "terminal.ansiMagenta",
    "explorer.fileNesting.enabled": true,
    "workbench.startupEditor": "none",
    "files.watcherExclude": {
        "**/Documents/AutoHotkey/**": true,
        "**/Resources/**": true,
        "**/Scripts/**": true
    },
    "editor.suggest.showStatusBar": true,
    "editor.suggest.preview": true,
    "editor.suggest.localityBonus": false,
    "editor.quickSuggestions": {
        "other": "inline",
        "comments": "inline",
        "strings": "inline"
    },
    "editor.inlineSuggest.showToolbar": "always",
    "editor.formatOnSave": false,
    "editor.formatOnPaste": true,
    "editor.formatOnType": false,
    "editor.find.seedSearchStringFromSelection": "selection",
    "editor.find.autoFindInSelection": "multiline",
    "editor.cursorSmoothCaretAnimation": "off",
    "editor.cursorBlinking": "phase",
    "editor.unfoldOnClickAfterEndOfLine": true,
    "editor.stickyTabStops": true,
    "editor.stickyScroll.maxLineCount": 3,
    "editor.stickyScroll.enabled": true,
    "editor.showFoldingControls": "always",
    "editor.semanticHighlighting.enabled": true,
    "editor.scrollBeyondLastLine": false,
    "editor.scrollbar.verticalScrollbarSize": 20,
    "editor.scrollbar.horizontalScrollbarSize": 20,
    "editor.renderWhitespace": "boundary",
    "editor.renderLineHighlight": "all",
    "editor.renderFinalNewline": "dimmed",
    "editor.padding.top": 4,
    "editor.padding.bottom": 4,
    "editor.mouseWheelZoom": true,
    "editor.linkedEditing": true,
    "editor.lineNumbers": "relative",
    "editor.inlayHints.padding": true,
    "editor.guides.bracketPairs": false,
    "editor.experimentalWhitespaceRendering": "font",
    "editor.experimental.pasteActions.enabled": true,
    "editor.comments.ignoreEmptyLines": false,
    "editor.colorDecorators": true,
    "scm.diffDecorationsGutterPattern": {
        "added": true
    },
    "scm.showActionButton": true,
    "editor.snippets.codeActions.enabled": true,
    "editor.lightbulb.enabled": true,
    "editor.tabCompletion": "on",
    "editor.formatOnSaveMode": "modifications",
    "editor.suggestSelection": "first",
    "files.trimTrailingWhitespace": true,
    "emmet.triggerExpansionOnTab": true,
}
